<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tests/localbootstrap.php"
>
    <testsuites>
        <testsuite name="ExeguibileDotIt Package Test Suite">
					<directory>./tests/ExeguibileDotIt/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
					<directory>./src/ExeguibileDotIt/</directory>
        </whitelist>
    </filter>
		<!--logging>
			  <log type="coverage-html" target="reports" lowUpperBound="35" highLowerBound="70"/>
		</logging-->
</phpunit>
